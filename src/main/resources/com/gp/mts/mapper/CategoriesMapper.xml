<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gp.mts.mapper.CategoriesMapper">
    <select id="getCategories" resultType="com.gp.mts.bean.po.Categories" parameterType="java.lang.String">
        select * from categories c
        <where>
            <if test="category!=null and category!=''">
                and c.category=#{category};
            </if>
            <if test="describeInfo!=null and describeInfo!=''">
                and c.describe_info=#{describeInfo};
            </if>
        </where>

    </select>
</mapper>
